{
  "paths": {
    "/hello/{name}": {
      "post": {
        "operationId": "hello",
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "200": {
          "description": "greeting hello",
          "content": {
            "applicatioin/json": {
              "schema": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "/people": {
      "get": {
        "operationId": "ListPerson",
        "parameters": [
          {
            "name": "sort",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "name",
                "-name",
                "age",
                "-age"
              ]
            }
          }
        ],
        "200": {
          "description": "list person",
          "content": {
            "applicatioin/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/PersonSummary"
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "CreatePerson",
        "parameters": [
          {
            "name": "verbose",
            "in": "query",
            "required": true,
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "age": {
                    "type": "integer",
                    "format": "int32"
                  },
                  "nickname": {
                    "$ref": "#/components/schemas/Name"
                  },
                  "fatherId": {
                    "type": "string"
                  },
                  "friendIdList": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                },
                "required": [
                  "name",
                  "age",
                  "fatherId",
                  "friendIdList"
                ],
                "additionalProperties": false
              }
            }
          }
        },
        "200": {
          "description": "create person",
          "content": {
            "applicatioin/json": {
              "schema": {
                "$ref": "#/components/schemas/Person"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PersonSummary": {
        "type": "object",
        "description": "person objec summary",
        "properties": {
          "name": {
            "type": "string"
          },
          "nickname": {
            "$ref": "#/components/schemas/Name"
          }
        },
        "required": [
          "name"
        ],
        "additionalProperties": false
      },
      "Name": {
        "type": "string",
        "minlength": 1
      },
      "Person": {
        "type": "object",
        "description": "person object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "age": {
            "type": "integer",
            "format": "int32"
          },
          "nickname": {
            "$ref": "#/components/schemas/Name"
          },
          "father": {
            "$ref": "#/components/schemas/Person"
          },
          "friends": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Person"
            }
          }
        },
        "required": [
          "id",
          "name",
          "age"
        ],
        "additionalProperties": false
      }
    }
  }
}
