{
  "openapi": "3.0.3",
  "info": {
    "title": "task API",
    "description": "simple list tasks API",
    "version": "0.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "local development"
    }
  ],
  "paths": {
    "/hello/{name}": {
      "post": {
        "operationId": "Hello",
        "description": "greeting hello",
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "default": {
            "description": "default error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "tags": [
          "greeting"
        ]
      }
    },
    "/people": {
      "get": {
        "operationId": "ListPerson",
        "description": "list person",
        "parameters": [
          {
            "name": "sort",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "name",
                "-name",
                "age",
                "-age"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "list of person summary",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/PersonSummary"
                  }
                }
              }
            }
          },
          "default": {
            "description": "default error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "tags": [
          "people"
        ]
      },
      "post": {
        "operationId": "CreatePerson",
        "description": "create person",
        "parameters": [
          {
            "name": "verbose",
            "in": "query",
            "required": true,
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "name of person"
                  },
                  "age": {
                    "type": "integer",
                    "format": "int32"
                  },
                  "nickname": {
                    "$ref": "#/components/schemas/Name"
                  },
                  "fatherId": {
                    "type": "string"
                  },
                  "friendIdList": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                },
                "required": [
                  "name",
                  "age",
                  "fatherId",
                  "friendIdList"
                ],
                "additionalProperties": false
              }
            }
          },
          "description": "person but father and friends are id"
        },
        "responses": {
          "204": {
            "description": "",
            "content": {
              "application/json": {}
            }
          },
          "default": {
            "description": "default error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        },
        "tags": [
          "people"
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        },
        "required": [
          "message"
        ],
        "additionalProperties": false
      },
      "PersonSummary": {
        "type": "object",
        "description": "person objec summary",
        "properties": {
          "name": {
            "type": "string",
            "description": "name of person"
          },
          "nickname": {
            "$ref": "#/components/schemas/Name"
          }
        },
        "required": [
          "name"
        ],
        "additionalProperties": false
      },
      "Name": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
