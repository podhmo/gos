{
  "components": {
    "schemas": {
      "Name": {
        "type": "string",
        "minlength": 1
      },
      "Person": {
        "type": "object",
        "description": "person object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "age": {
            "type": "integer",
            "format": "int32"
          },
          "nickname": {
            "$ref": "#/components/schemas/Name"
          },
          "father": {
            "$ref": "#/components/schemas/Person"
          },
          "friends": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Person"
            }
          }
        },
        "required": [
          "id",
          "name",
          "age"
        ],
        "additionalProperties": false
      },
      "PersonSummary": {
        "type": "object",
        "description": "person objec summary",
        "properties": {
          "name": {
            "type": "string"
          },
          "nickname": {
            "$ref": "#/components/schemas/Name"
          }
        },
        "required": [
          "name"
        ],
        "additionalProperties": false
      },
      "TestScore": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "tests": {
            "type": "object",
            "description": "score (0~100)",
            "patternProperties": {
              "\\-score$": {
                "type": "integer"
              }
            },
            "additionalProperties": false,
            "pattern": "\\-score$"
          }
        },
        "required": [
          "title",
          "tests"
        ],
        "additionalProperties": false
      },
      "Ordering": {
        "type": "string",
        "description": "順序\n\n*  降順\n*  昇順",
        "enum": [
          "desc",
          "asc"
        ],
        "default": "desc"
      }
    }
  }
}
